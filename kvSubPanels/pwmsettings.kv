# Description:
#   This panel is used to set PWM limits for steering and throttle.
#
# create a new Kivy class "PWMsettings" based on BoxLayout.
# Note: Kivy classes MUST start with a capital.

<PWMsettings@BoxLayout>:
  # Python properties
  pwmReadingThrottleMax: kvThrottleMax
  pwmReadingThrottleMin: kvThrottleMin
  pwmReadingSteeringMax: kvSteeringMax
  pwmReadingSteeringMin: kvSteeringMin

  # Customize some layout attributes
  orientation: 'horizontal'
  size_hint_y: None
  height: 67
  size_hint_x: 1
  pos_hint: {'top': 1}
  padding: 2
  spacing: 2
  canvas.before:
    Color:
      rgba: .117, .376, .553, 1
    Rectangle:
      # self here refers to the widget i.e BoxLayout
      pos: self.pos
      size: self.size

  Label:
    text: 'PWM Settings'
    color: 1, 1, 1, 1
    halign: 'center'
    valign: 'middle'
    size_hint_x: None
    width: 150
    markup: True
    text_size: self.size

  GridLayout:
    padding: 2
    spacing: 2
    rows: 2

    BoxLayout:
      # Use to set the "row" background color
      orientation: 'horizontal'
      canvas.before:
        Color:
          rgba: .217, .476, .653, 1
        Rectangle:
          # self here refers to the widget i.e BoxLayout
          pos: self.pos
          size: self.size

      Label:
        id: kvThrottleMax
        text: 'Throttle Max: 0'
        halign: 'center'
        valign: 'middle'
        text_size: self.size

      Label:
        id: kvThrottleMin
        text: 'Throttle Min: 0'
        halign: 'center'
        valign: 'middle'
        text_size: self.size

    BoxLayout:
      # Use to set the "row" background color
      orientation: 'horizontal'
      canvas.before:
        Color:
          rgba: .217, .476, .653, 1
        Rectangle:
          # self here refers to the widget i.e BoxLayout
          pos: self.pos
          size: self.size

      Label:
        id: kvSteeringMax
        text: 'Steering Max: 0'
        halign: 'center'
        valign: 'middle'
        text_size: self.size

      Label:
        id: kvSteeringMin
        text: 'Steering Min: 0'
        halign: 'center'
        valign: 'middle'
        text_size: self.size
