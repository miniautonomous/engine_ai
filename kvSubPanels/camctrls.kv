# Description:
#   This panel displays the output from the camera feed.
#
# create a new Kivy class "CamCtrls" based on BoxLayout.
# Note: Kivy classes MUST start with a capital.

<CamCtrls@FloatLayout>:
  imgMsg: kvImgMessage
  size_hint_x: None
  width: root.parent.width
  canvas:
    Rectangle:
      texture: root.parent.image_texture
      pos: self.pos
      size: self.size

  Label:
    id: kvImgMessage
    text: ''
    color: 0, 0, 0, 1
    halign: 'left'
    valign: 'middle'
    markup: True
    text_size: self.size
